{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    {% for article in heading.articles %}
        <section class="{% if loop.index is even %}bg-light{% else %}bg-white{% endif %}">
            <div class="container py-5">
                <div class="row featurette">
                    <div class="{% if loop.index is even %}col-md-7 {% else %}col-md-7 order-md-1{% endif %}">
                        <h2 class="featurette-heading">{{ article.title }}<span class="text-muted">. Sous-titre.</span></h2>
                        <p class="lead">{{ article.content |raw }}</p>
                    </div>
                    <div class="col-md-5">
                        <img class=" img-fluid mx-auto" src="{{ article.image }}" alt="">
                    </div>
                </div>
            </div>
        </section>
    {% endfor %}
{% endblock %}
