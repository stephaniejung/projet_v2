{% extends 'layout_sidebar.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{%- block button_attributes -%}
    id="{{ id }}" name="{{ full_name }}"{% if disabled %} disabled="disabled"{% endif -%}
    {{ block('attributes') }}
{%- endblock button_attributes -%}

{% block content %}
    <h3 class="pb-3 mb-4 font-italic border-bottom">Laissez-nous votre message !</h3>
    <div class="container">
        <div>
            {{ form_start(our_form) }}
            {{ form_row(our_form.name, {'attr':{'placeholder': "votre nom"} }) }}
            {{ form_row(our_form.from, {'attr':{'placeholder': "votre email"} }) }}
            {{ form_row(our_form.choice) }}
            {{ form_row(our_form.message, {'attr':{'placeholder': "votre message"} }) }}




            {{ form_row(our_form.file, {'attr':{'name': 'full_name'} }) }}

            <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <input type="submit" value="Send" class="btn btn-danger btn-lg btn-block" />
                </div>
            </div>


            {{ form_end(our_form) }}
        </div>

    </div>
    <script>

        $('.custom-file-input').on('change',function(){
            var fileName = $(this).val();
        })
    </script>

{% endblock %}
